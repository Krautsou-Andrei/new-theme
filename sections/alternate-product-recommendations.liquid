
<article class="section__carousel carousel container">
        <span id="ally_tags_label" class="visually-hidden" aria-hidden="true">Теги продукта</span>
        <div class="carousel__container">
          <h2 class="carousel__heading heading--xxl title-heading--carousel">{{- section.settings.heading -}}</h2>
          <ul class="carousel__list" role="list">
          {%- for block in section.settings.collection.products limit:section.settings.products_to_show -%}
            <li class="carousel__item">
              {%- assign block = block -%}
              {%- render 'alternate-product-card', product: block, forloop: forloop -%}
            </li>
          {%- endfor -%}
          </ul>
        </div>
      </article>

{%- schema -%}
  {
    "name": "Alternate product recom",
    "tag": "section",
   
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "You may also like",
        "default": "You may also like"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "products_to_show",
        "min": 3,
        "max": 6,
        "step": 1,
        "label": "Products to show",
        "default": 3
      }
    ],
    
    "presets": [
      {
      "name": "Alternate product recomendations"
      }
    ]
  }
{%- endschema -%}

