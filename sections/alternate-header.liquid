<div
  class='header__container'
  data-section-id='{{- section.id -}}'
  data-section-type='alternate-header'
>
  <a class='skip-to' href='#main'>{{- 'accessibility.skip_to_product_info' | t -}}</a>

  {%- if section.settings.header_menu != blank -%}
    <div class='menu-burger__wrap' data-menu-burger>
      <button
        class='menu-burger__button menu-burger-button'
        type='button'
        aria-label='{{- 'sections.header.menu' | t -}}'
        aria-expanded='false'
        data-menu-burger-button
      >
        <span class='menu-burger-button__burger'>
          <span></span>
          <span></span>
          <span></span>
        </span>
      </button>

      <nav class='header__menu menu-burger' inert data-menu-burger-content>
        <ul class='menu-burger__list' role='list'>
          {%- if section.settings.header_menu.links.size > 0 -%}
            {%- for link in section.settings.header_menu.links -%}
              <li class='menu-burger__item'>
                <a
                  class='menu-burger__link link'
                  href='{{- link.url -}}'
                  data-menu-burger-link
                >
                  {{- link.title | escape -}}
                </a>
              </li>
            {%- endfor -%}
          {%- endif -%}
          <li class='menu__item'>
            <a
              class='menu__link link'
              href='{{- routes.account_url -}}'
              data-menu-burger-link
            >
              {{- 'customer.account.title' | t }}
            </a>
          </li>
        </ul>
      </nav>
    </div>
  {%- endif -%}
  {%- if section.settings.header_menu != blank -%}
    <nav class='header__menu menu menu--site'>
      <ul class='menu__list' role='list'>
        {%- for link in section.settings.header_menu.links -%}
          <li class='menu__item'>
            <a class='menu__link link' href='{{- link.url -}}'>{{- link.title | escape -}}</a>
          </li>
        {%- endfor -%}
      </ul>
    </nav>
  {%- endif -%}
  <a class='header__logo logo' href='{{ routes.root_url }}'>
    <span class='visually-hidden'>{{- 'accessibility.home_page' | t -}}</span>
    {%- if section.settings.logo != blank -%}
      {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}
      {%- assign logo_height = section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio -%}
      {{-
        section.settings.logo
        | image_url: width: section.settings.width
        | image_tag: class: 'logo__image', height: logo_height, width: section.settings.logo_width, alt: logo_alt
      -}}
    {%- else -%}
      <span class='h2'>{{- shop.name | escape -}}</span>
    {%- endif -%}
  </a>
  <nav class='header__menu menu menu--user'>
    <ul class='menu__list' role='list'>
      <li class='menu__item'>
        <a class='menu__link link' href='{{- routes.account_url -}}'>{{- 'customer.account.title' | t }}</a>
      </li>
      <li class='menu__item'>
        <a class='menu__link link' href='{{- routes.search_url -}}'>{{- 'general.search.search' | t -}}</a>
      </li>
      <li class='menu__item'>
        <a class='menu__link link cart-preview' href='{{- routes.cart_url -}}'>
          {{- 'templates.cart.cart' | t }}
          <span
            class='cart-preview__quantity'
            id='cart-quantity'
            aria-live='polite'
          >
            <span class='visually-hidden'>{{- 'accessibility.quantity_of_items_in_the_cart' | t -}}</span>
            (
            {{- cart.item_count -}}
            )</span
          ></a
        >
      </li>
    </ul>
  </nav>
  <nav class='header__menu menu-burger-user'>
    <ul class='menu-burger-user__list' role='list'>
      <li class='menu-burger-user__item menu-link--account'>
        <a
          class='menu-burger-user__link link'
          href='{{- routes.account_url -}}'
          aria-label='{{- 'customer.account.title' | t }}'
        >
          <svg
            class='menu-burger-user__svg link--svg'
            xmlns='http://www.w3.org/2000/svg'
            viewBox='0 0 20 20'
            width='20'
            height='20'
          >
            <path d="M12,12A6,6,0,1,0,6,6,6.006,6.006,0,0,0,12,12ZM12,2A4,4,0,1,1,8,6,4,4,0,0,1,12,2Z" fill="currentColor" />
            <path d="M12,14a9.01,9.01,0,0,0-9,9,1,1,0,0,0,2,0,7,7,0,0,1,14,0,1,1,0,0,0,2,0A9.01,9.01,0,0,0,12,14Z" fill="currentColor" />
          </svg>
        </a>
      </li>
      <li class='menu-burger-user__item'>
        <a
          class='menu-burger-user__link link'
          href='{{- routes.search_url -}}'
          aria-label='{{- 'general.search.search' | t -}}'
        >
          <svg
            class='menu-burger-user__svg link--svg'
            xmlns='http://www.w3.org/2000/svg'
            viewBox='0 0 20 20'
            width='20'
            height='20'
          >
            <path d="M23.707,22.293l-5.969-5.969a10.016,10.016,0,1,0-1.414,1.414l5.969,5.969a1,1,0,0,0,1.414-1.414ZM10,18a8,8,0,1,1,8-8A8.009,8.009,0,0,1,10,18Z" fill="currentColor" />
          </svg>
        </a>
      </li>
      <li class='menu-burger-user__item'>
        <a
          class='menu-burger-user__link link cart-preview'
          href='{{- routes.cart_url -}}'
        >
          <svg
            class='menu-burger-user__svg link--svg'
            xmlns='http://www.w3.org/2000/svg'
            viewBox='0 0 24 20'
            width='24'
            height='20'
          >
            <path
              d="M22.713,4.077A2.993,2.993,0,0,0,20.41,3H4.242L4.2,2.649A3,3,0,0,0,1.222,0H1A1,1,0,0,0,1,2h.222a1,1,0,0,1,.993.883l1.376,11.7A5,5,0,0,0,8.557,19H19a1,1,0,0,0,0-2H8.557a3,3,0,0,1-2.82-2h11.92a5,5,0,0,0,4.921-4.113l.785-4.354A2.994,2.994,0,0,0,22.713,4.077ZM21.4,6.178l-.786,4.354A3,3,0,0,1,17.657,13H5.419L4.478,5H20.41A1,1,0,0,1,21.4,6.178Z"
              fill="currentColor" />
            <circle cx="7" cy="22" r="2" />
            <circle cx="17" cy="22" r="2" />
          </svg>
          <span
            class='cart-preview__quantity'
            aria-live='polite'
            >np
            <span class='visually-hidden'>
              {{- 'templates.cart.cart' | t }}
              {{- 'accessibility.quantity_of_items_in_the_cart' | t -}}
            </span>
            (
            {{- cart.item_count -}}
            )</span
          >
        </a>
      </li>
    </ul>
  </nav>
</div>

{%- schema -%}
{
  "name": "t:sections.alternate-header.name",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.alternate-header.logo_label"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 100,
      "unit": "t:sections.header.settings.logo_width.unit",
      "label": "t:sections.header.settings.logo_width.label"
    },
    {
      "type": "link_list",
      "id": "header_menu",
      "label": "t:sections.alternate-header.header_menu_label"
    }
  ]
}
{%- endschema -%}
