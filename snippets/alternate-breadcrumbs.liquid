<nav class="breadcrums breadcrums__container" aria-label="Breadcrumb">
        <ol class="breadcrums__list">
          <li class="breadcrums__item"><a href="{{routes.root_url}}" class="breadcrums__page" title="Home">Home</a></li>
          {% if product.collections != blank%}
           {%assign product_from_collection = product.collections | first%}
          <li class="breadcrums__item"><a href=" {{product_from_collection.url}}" class="breadcrums__page"> {{product_from_collection.title}}</a></li>
          {%endif%}
          <li class="breadcrums__item"><span class="breadcrums__page breadcrums__page--current" aria-current="page">{{product.title}}</span></li>
        </ol>
</nav>

