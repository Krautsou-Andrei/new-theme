<nav class='breadcrumbs breadcrumbs__container' aria-label='Breadcrumb'>
  <ol class='breadcrumbs__list'>
    <li class='breadcrumbs__item'>
      <a class='breadcrumbs__page link' href='{{routes.root_url}}' title='Home'>{{- 'breadcrumbs.home' | t -}}</a>
    </li>
    {%- if product.collections != blank -%}
      {%- assign product_from_collection = product.collections | first -%}
      <li class='breadcrumbs__item link'>
        <a href=' {{- product_from_collection.url -}}' class='breadcrumbs__page'>
          {{- product_from_collection.title | escape -}}
        </a>
      </li>
    {%- endif -%}
    <li class='breadcrumbs__item'>
      <span class='breadcrumbs__page breadcrumbs__page--current' aria-current='page'>
        {{- product.title | escape -}}
      </span>
    </li>
  </ol>
</nav>
